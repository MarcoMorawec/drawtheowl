<div class="container">
<!-- flash message goes here -->
<% if !flash[:notice].blank? %>
	<div class="alert">
		<%= flash[:notice] %>
	</div>
<% end %>
<!-- end of flash message goes here -->

		<div class="well">
			<div class="row">
				<div class="span4">
					<h3>Have some good advice?</h3>
				</div>
				<div class="span3">
					<h5>Great!</h5>
					<h5>We review every piece of advice before we post it to make sure it's really fucking good. So make sure what you post is solid.</h5>
				</div>
				<div class="span12">
					<%= form_for(:sentence1, :url => {:action => 'create'}) do |f| %>
						
						<%= f.label :twitterhandle, "Your Twitterhandle" %>
							<%= f.text_field(:twitterhandle) %>
						

						<%= f.label :advice, "Your Advice" %>
							<%= f.text_field(:advice) %>
						<br/>

						<%= submit_tag("Send your Advice", :class => "btn btn-danger") %>
					<% end %>
				</div>
			</div>
		</div>
		<p class="hr">

</div>

